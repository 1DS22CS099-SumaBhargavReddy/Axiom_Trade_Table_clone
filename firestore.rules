/**
 * This ruleset governs access to the Firestore database for a token trading application.
 *
 * Core Philosophy:
 * - Public token data is read-only for all clients to ensure data integrity.
 * - User profile data is private and can only be modified by the owner.
 *
 * Data Structure:
 * - /tokens/{tokenId}: Public information about a specific trading token.
 * - /users/{userId}: Private user profile information, linked to their authentication UID.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows public read access for all token data but denies all client-side writes.
     */
    match /tokens/{tokenId} {
      allow get: if true;
      allow list: if true;

      // Writes are disabled. Token data should only be updated by a trusted backend service.
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Secures user profile data.
     * @path        /users/{userId}
     * @allow       A user can read, create, and update their own profile document.
     * @deny        A user cannot access or modify another user's profile.
     * @principle   Enforces data ownership and privacy.
     */
    match /users/{userId} {
      // Users can get their own profile
      allow get: if request.auth != null && request.auth.uid == userId;

      // Users can create their own profile, but not for another user.
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Users can update their own profile.
      allow update: if request.auth != null && request.auth.uid == userId;
      
      // Users cannot be deleted from the client.
      allow delete: if false;

      // Listing all users is not allowed.
      allow list: if false;
    }
  }
}
