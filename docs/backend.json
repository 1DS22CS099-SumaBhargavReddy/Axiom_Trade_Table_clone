{
  "entities": {
    "Token": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Token",
      "type": "object",
      "description": "Represents a token in the trading table.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the token."
        },
        "name": {
          "type": "string",
          "description": "Name of the token."
        },
        "symbol": {
          "type": "string",
          "description": "Symbol of the token (e.g., BTC, ETH)."
        },
        "price": {
          "type": "number",
          "description": "Current price of the token."
        },
        "dailyChange": {
          "type": "number",
          "description": "The amount the token price has changed in the last 24 hours."
        },
        "dailyVolume": {
          "type": "number",
          "description": "The amount of the token that has been traded in the last 24 hours."
        },
        "isNewPair": {
          "type": "boolean",
          "description": "Indicates if the token is a new pair."
        },
        "isFinalStretch": {
          "type": "boolean",
          "description": "Indicates if the token is in its final stretch."
        },
        "isMigrated": {
          "type": "boolean",
          "description": "Indicates if the token has been migrated."
        }
      },
      "required": [
        "id",
        "name",
        "symbol",
        "price",
        "dailyChange",
        "dailyVolume",
        "isNewPair",
        "isFinalStretch",
        "isMigrated"
      ]
    },
    "UserProfile": {
      "title": "User Profile",
      "description": "Stores user profile information.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "User's unique ID."
        },
        "name": {
          "type": "string",
          "description": "User's full name."
        },
        "email": {
          "type": "string",
          "description": "User's email address."
        },
        "country": {
          "type": "string",
          "description": "User's country of residence."
        },
        "contact": {
          "type": "string",
          "description": "User's contact number."
        },
        "profilePic": {
          "type": "string",
          "description": "URL to the user's profile picture."
        }
      },
      "required": ["id", "name", "email"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "google.com"
    ]
  },
  "firestore": {
    "/tokens/{tokenId}": {
      "schema": {
        "$ref": "#/entities/Token"
      },
      "description": "Stores token data. Each document represents a token in the trading table."
    },
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores user profile information, linked to their authentication UID."
    }
  }
}